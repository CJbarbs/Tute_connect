/*form partial below with the haml specific divs to structure the form otherwise the text is not within the scope of the screen */

%div 
	%div.col-md-12
		%div.col-md-6 

			= simple_form_for(@job, html: { class: 'form-horizontal' }) do |f|
				= f.collection_select :category_id, Category.all, :id, :name, {prompt: "Choose a category"}, input_html: { class: "dropdown-toggle"}
				= f.input :title, label: "Job Title", input_html: { class: "form-control"}
				= f.input :description, label: "Job Description", input_html: { class: "form-control"}
				= f.input :tutor, label: "Tutor's name", input_html: { class: "form-control"}
				= f.input :url, label: "Social Media Contact", input_html: { class: "form-control"}
				%br/
				= f.button :submit
	
		
